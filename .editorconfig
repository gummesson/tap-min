# editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Use tabs in JavaScript and JSON.
[**.{js, json}]
indent_style = tab
indent_size = 4

# Because if npm ðŸ™„
[package.json]
indent_style = spaces
indent_size = 2

# Use spaces in YAML.
[**.{yml,yaml}]
indent_style = spaces
indent_size = 2
